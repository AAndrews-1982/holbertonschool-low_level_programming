#include <stdlib.h>
#incude <time.h>
#include <stdio.h>

/**
*main - assign random number to variable and print if positive, negative, or zero.
*
*Return: 0
*/
int main(void)
{
	int n;
	srand(time(0));
	n = rand() - RAND_MAX / 2;

	if (n == 0)
		printf("%s is zero\n", n);
	if (n < 0)
		printf("%d is negative\n", n);
	if (n > 0)
		printf("%d is positive\n", n);
	return (0);
}
